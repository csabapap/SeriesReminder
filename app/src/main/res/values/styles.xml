<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:searchViewStyle">@style/Widget.SeriesReminder.SearchView</item>
    </style>

    <style name="Widget.SeriesReminder" parent="android:Widget"/>

    <style name="Widget.SeriesReminder.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:searchIcon">@color/transparent</item>
        <item name="android:searchHintIcon">@color/transparent</item>
        <item name="android:queryBackground">@color/transparent</item>
        <item name="android:submitBackground">@color/transparent</item>
    </style>

</resources>
