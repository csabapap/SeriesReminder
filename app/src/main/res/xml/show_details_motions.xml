<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/expanded"
        app:constraintSetEnd="@id/collapsed">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/nestedScrollView"
            app:touchAnchorSide="top"/>
        <KeyFrameSet>

            <KeyAttribute
                app:framePosition="40"
                app:target="@id/poster">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customIntegerValue="255" />
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="68"
                app:target="@id/poster">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customIntegerValue="0" />
            </KeyAttribute>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="75"
                app:target="@id/status" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="75"
                app:target="@id/air_daytime" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/cover"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@id/poster"
            android:layout_height="148dp"
            android:layout_width="100dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/title_background"/>

        <Constraint
            android:id="@id/show_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/title_background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/poster_guideline"
            app:layout_constraintTop_toTopOf="@+id/title_background" />

        <Constraint
            android:id="@id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
            app:layout_constraintStart_toStartOf="@+id/show_title"
            app:layout_constraintTop_toBottomOf="@+id/show_title"
            app:layout_constraintVertical_bias="0.0"
            android:alpha="1"/>

        <Constraint
            android:id="@id/air_daytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
            app:layout_constraintStart_toStartOf="@+id/show_title"
            app:layout_constraintTop_toBottomOf="@+id/status"
            android:alpha="1"/>

        <Constraint
            android:id="@id/title_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/cover"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/cover"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@id/poster"
            android:layout_height="58dp"
            android:layout_width="40dp"
            app:layout_constraintBottom_toBottomOf="@id/toolbar" />

        <Constraint
            android:id="@id/show_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/title_background"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_background"
            app:layout_constraintBottom_toBottomOf="@id/title_background"/>

        <Constraint
            android:id="@id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
            app:layout_constraintStart_toStartOf="@+id/show_title"
            app:layout_constraintTop_toBottomOf="@+id/show_title"
            app:layout_constraintVertical_bias="0.0"
            android:alpha="0"/>

        <Constraint
            android:id="@id/air_daytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
            app:layout_constraintStart_toStartOf="@+id/show_title"
            app:layout_constraintTop_toBottomOf="@+id/status"
            android:alpha="0"/>

        <Constraint
            android:id="@id/title_background"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"/>
    </ConstraintSet>

</MotionScene>